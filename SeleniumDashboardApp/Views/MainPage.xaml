<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SeleniumDashboardApp.ViewModels"
             xmlns:converters="clr-namespace:SeleniumDashboardApp.Converters"
             xmlns:shared="clr-namespace:SeleniumDashboardApp.Views.Shared"
             x:Class="SeleniumDashboardApp.Views.MainPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#34495E">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:StatusColorConverter x:Key="StatusColorConverter" />
            <converters:NullOrEmptyToBoolConverter x:Key="NullOrEmptyToBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,Auto,*">

        <!-- 🔝 Topbar met titel en login/logout knop -->
        <shared:TopBarView Grid.Row="0" />

        <!-- Iconen onder topbar -->
        <Grid Grid.Row="1" Padding="20,15,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Zoek knop als Frame -->
            <Frame Grid.Column="0"
                   BackgroundColor="Transparent"
                   WidthRequest="44"
                   HeightRequest="44"
                   CornerRadius="22"
                   HasShadow="False"
                   Padding="0"
                   Margin="0,0,15,0"
                   BorderColor="Transparent">

                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnToggleSearchClicked" />
                </Frame.GestureRecognizers>

                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroup x:Name="SearchButtonStates">
                        <VisualState x:Name="PointerOver">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="#4A6274" />
                                <Setter Property="Scale" Value="1.1" />
                            </VisualState.Setters>
                        </VisualState>
                        <VisualState x:Name="Normal">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="Transparent" />
                                <Setter Property="Scale" Value="1.0" />
                            </VisualState.Setters>
                        </VisualState>
                        <VisualState x:Name="Pressed">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="#5D7285" />
                                <Setter Property="Scale" Value="0.95" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateManager.VisualStateGroups>

                <Label Text="🔍" 
                       TextColor="White" 
                       FontSize="18"
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />
            </Frame>

            <!-- Filter knop als Frame -->
            <Frame Grid.Column="1"
                   BackgroundColor="Transparent"
                   WidthRequest="44"
                   HeightRequest="44"
                   CornerRadius="22"
                   HasShadow="False"
                   Padding="0"
                   BorderColor="Transparent">

                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnToggleFilterClicked" />
                </Frame.GestureRecognizers>

                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroup x:Name="FilterButtonStates">
                        <VisualState x:Name="PointerOver">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="#4A6274" />
                                <Setter Property="Scale" Value="1.1" />
                            </VisualState.Setters>
                        </VisualState>
                        <VisualState x:Name="Normal">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="Transparent" />
                                <Setter Property="Scale" Value="1.0" />
                            </VisualState.Setters>
                        </VisualState>
                        <VisualState x:Name="Pressed">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="#5D7285" />
                                <Setter Property="Scale" Value="0.95" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateManager.VisualStateGroups>

                <Label Text="≔" 
                       TextColor="Black" 
                       FontSize="26"
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />
            </Frame>

            <!-- Refresh knop als Frame -->
            <Frame Grid.Column="3"
                   BackgroundColor="Transparent"
                   WidthRequest="44"
                   HeightRequest="44"
                   CornerRadius="22"
                   HasShadow="False"
                   Padding="0"
                   BorderColor="Transparent">

                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnRefreshClicked" />
                </Frame.GestureRecognizers>

                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroup x:Name="RefreshButtonStates">
                        <VisualState x:Name="PointerOver">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="#4A6274" />
                                <Setter Property="Scale" Value="1.1" />
                            </VisualState.Setters>
                        </VisualState>
                        <VisualState x:Name="Normal">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="Transparent" />
                                <Setter Property="Scale" Value="1.0" />
                            </VisualState.Setters>
                        </VisualState>
                        <VisualState x:Name="Pressed">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="#5D7285" />
                                <Setter Property="Scale" Value="0.95" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateManager.VisualStateGroups>

                <Label Text="⟳" 
                       TextColor="Black" 
                       FontSize="26"
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />
            </Frame>
        </Grid>

        <!-- Inhoud -->
        <ScrollView Grid.Row="2" BackgroundColor="#F5F5F5">
            <VerticalStackLayout Padding="20" Spacing="20">

                <!-- Zoekveld -->
                <Frame x:Name="SearchEntryFrame"
                       BackgroundColor="White"
                       CornerRadius="8"
                       Padding="0"
                       HasShadow="False"
                       BorderColor="#DDD"
                       IsVisible="False">
                    <Entry x:Name="SearchEntry"
                           Placeholder="Zoek op project..."
                           Text="{Binding SearchProject, Mode=TwoWay}"
                           TextColor="Black"
                           BackgroundColor="Transparent"
                           HeightRequest="40" />
                </Frame>

                <!-- Filter sectie -->
                <Frame x:Name="StatusPickerFrame"
                       BackgroundColor="White"
                       CornerRadius="8"
                       Padding="10"
                       HasShadow="False"
                       BorderColor="#DDD"
                       IsVisible="False"
                       WidthRequest="150"
                       HorizontalOptions="Start">
                    <VerticalStackLayout>
                        <Label Text="Status"
                               FontAttributes="Bold"
                               Margin="0,0,0,10"
                               TextColor="Black" />

                        <RadioButton Content="Passed"
                                     IsChecked="{Binding IsStatusPassedSelected, Mode=TwoWay}"
                                     TextColor="Black" />

                        <RadioButton Content="Failed"
                                     IsChecked="{Binding IsStatusFailedSelected, Mode=TwoWay}"
                                     TextColor="Black" />

                        <Button Text="Reset filter"
                                Command="{Binding ResetFiltersCommand}"
                                BackgroundColor="#F0F0F0"
                                TextColor="Black"
                                CornerRadius="8"
                                Padding="5"
                                FontSize="14"
                                Margin="0,10,0,0" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Statuslabel -->
                <Label x:Name="StatusDisplay"
                       FontSize="14"
                       TextColor="DimGray"
                       IsVisible="False"
                       Text="False" />

                <!-- Testrun resultaten -->
                <CollectionView x:Name="TestRunsCollectionView"
                                ItemsSource="{Binding TestRuns}"
                                SelectionMode="None">

                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Vertical" ItemSpacing="5" />
                    </CollectionView.ItemsLayout>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="White"
                                   CornerRadius="8"
                                   HasShadow="False"
                                   BorderColor="#E0E0E0"
                                   Margin="0"
                                   Padding="15">

                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnTestRunTapped" />
                                </Frame.GestureRecognizers>

                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="BorderStates">
                                        <VisualState x:Name="PointerOver">
                                            <VisualState.Setters>
                                                <Setter Property="BackgroundColor" Value="#F8F9FA" />
                                                <Setter Property="BorderColor" Value="#007ACC" />
                                            </VisualState.Setters>
                                        </VisualState>
                                        <VisualState x:Name="Normal">
                                            <VisualState.Setters>
                                                <Setter Property="BackgroundColor" Value="White" />
                                                <Setter Property="BorderColor" Value="#E0E0E0" />
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>

                                <!-- Grid: inhoud links, knop rechtsboven -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <VerticalStackLayout Grid.Column="0" Spacing="5">
                                        <Label Text="{Binding ProjectName}"
                                               FontAttributes="Bold"
                                               FontSize="18"
                                               TextColor="#333" />

                                        <Frame BackgroundColor="{Binding Status, Converter={StaticResource StatusColorConverter}}"
                                               CornerRadius="12"
                                               Padding="8,4"
                                               HasShadow="False"
                                               HorizontalOptions="Start">
                                            <Label Text="{Binding Status}"
                                                   TextColor="White"
                                                   FontSize="12"
                                                   FontAttributes="Bold" />
                                        </Frame>

                                        <Label Text="{Binding Date}"
                                               FontSize="12"
                                               TextColor="Gray" />
                                        <Label Text="{Binding Summary}"
                                               FontSize="14"
                                               TextColor="DimGray" />
                                    </VerticalStackLayout>

                                    <!-- Delete knop als Frame -->
                                    <Frame Grid.Column="1"
                                           BackgroundColor="Transparent"
                                           WidthRequest="40"
                                           HeightRequest="40"
                                           CornerRadius="20"
                                           HasShadow="False"
                                           Padding="0"
                                           BorderColor="Transparent"
                                           HorizontalOptions="End"
                                           VerticalOptions="Start">

                                        <Frame.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="OnDeleteTestRun" />
                                        </Frame.GestureRecognizers>

                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup x:Name="DeleteButtonStates">
                                                <VisualState x:Name="PointerOver">
                                                    <VisualState.Setters>
                                                        <Setter Property="BackgroundColor" Value="#FFE6E6" />
                                                        <Setter Property="Scale" Value="1.1" />
                                                    </VisualState.Setters>
                                                </VisualState>
                                                <VisualState x:Name="Normal">
                                                    <VisualState.Setters>
                                                        <Setter Property="BackgroundColor" Value="Transparent" />
                                                        <Setter Property="Scale" Value="1.0" />
                                                    </VisualState.Setters>
                                                </VisualState>
                                                <VisualState x:Name="Pressed">
                                                    <VisualState.Setters>
                                                        <Setter Property="BackgroundColor" Value="#FFCCCC" />
                                                        <Setter Property="Scale" Value="0.95" />
                                                    </VisualState.Setters>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>

                                        <Label Text="🗑️" 
                                               TextColor="Black" 
                                               FontSize="18"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center">
                                            <Label.Triggers>
                                                <DataTrigger TargetType="Label" 
                                                           Binding="{Binding Source={RelativeSource AncestorType={x:Type Frame}}, Path=BackgroundColor}" 
                                                           Value="#FFE6E6">
                                                    <Setter Property="TextColor" Value="#DC3545" />
                                                </DataTrigger>
                                            </Label.Triggers>
                                        </Label>
                                    </Frame>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>