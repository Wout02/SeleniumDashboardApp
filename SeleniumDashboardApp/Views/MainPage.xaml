<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SeleniumDashboardApp.Views.MainPage">
    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Label Text="Selenium Test Runs" FontSize="24" FontAttributes="Bold" />
            <CollectionView ItemsSource="{Binding TestRuns}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="Gray" Padding="10" Margin="5">
                            <StackLayout>
                                <Label Text="{Binding ProjectName}" FontAttributes="Bold" />
                                <Label Text="{Binding Status}" />
                                <Label Text="{Binding Date}" />
                                <Label Text="{Binding Summary}" LineBreakMode="TailTruncation" />
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>