<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SeleniumDashboardApp.Views.Shared.TopBarView"
             Padding="0"
             Margin="0">
    <Grid Padding="12" BackgroundColor="{StaticResource AccentColor}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Label Text="Selenium Dashboard"
               FontSize="22"
               FontAttributes="Bold"
               VerticalOptions="Center"
               TextColor="{StaticResource HeaderTextColor}"
               Grid.Column="0" />

        <!-- Add loading indicator (initially hidden) -->
        <ActivityIndicator x:Name="LoadingIndicator"
                          IsVisible="False"
                          IsRunning="True"
                          Color="{StaticResource HeaderTextColor}"
                          HeightRequest="20"
                          WidthRequest="20"
                          VerticalOptions="Center"
                          HorizontalOptions="End"
                          Margin="0,0,10,0"
                          Grid.Column="1" />

        <Button x:Name="LogoutButton"
                Text="Uitloggen"
                FontSize="14"
                Padding="8,4"
                BackgroundColor="Transparent"
                TextColor="{StaticResource HeaderTextColor}"
                Clicked="OnLogoutClicked"
                Grid.Column="1" />
    </Grid>
</ContentView>