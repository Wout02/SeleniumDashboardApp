<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:SeleniumDashboardApp.Converters"
    xmlns:vm="clr-namespace:SeleniumDashboardApp.ViewModels"
    x:Class="SeleniumDashboardApp.Views.Tabs.LogsView">

    <VerticalStackLayout Padding="20" Spacing="12">
        <!-- Titel -->
        <Label Text="Logboek"
               FontSize="20"
               FontAttributes="Bold"
               TextColor="{StaticResource PrimaryText}" />

        <!-- Intro -->
        <Label Text="Loginformatie voor de geselecteerde test:"
               FontSize="14"
               TextColor="{StaticResource PrimaryText}" />

        <!-- Samenvatting test -->
        <Label Text="{Binding SelectedTestRun.Summary}"
               FontAttributes="Italic"
               TextColor="{StaticResource PrimaryText}" />

        <ScrollView>
            <Frame BackgroundColor="#eeeeee"
           BorderColor="Black"
           Padding="12"
           CornerRadius="4"
           Margin="0,10,0,0">
                <Label Text="{Binding SelectedTestRun.LogOutput}"
               FontFamily="Courier New"
               FontSize="12"
               TextColor="Black"
               LineBreakMode="CharacterWrap" />
            </Frame>
        </ScrollView>
    </VerticalStackLayout>
</ContentView>