<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
xmlns:converters="clr-namespace:SeleniumDashboardApp.Converters"
             x:Class="SeleniumDashboardApp.Views.Tabs.DetailsView"
             BackgroundColor="#f5f5f5"
             Padding="20">

    <ScrollView>
        <VerticalStackLayout Spacing="20">

            <!-- Titel -->
            <Label Text="Testuitvoering Details"
                   FontSize="26"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#222" />

            <!-- Detailkaart -->
            <Frame CornerRadius="12"
                   HasShadow="True"
                   BackgroundColor="White"
                   Padding="20">

                <VerticalStackLayout Spacing="12">

                    <!-- Projectnaam -->
                    <Label Text="Project:"
                           FontAttributes="Bold"
                           FontSize="16"
                           TextColor="#333" />
                    <Label Text="{Binding SelectedTestRun.ProjectName}"
                           FontSize="16"
                           TextColor="Black" />

                    <!-- Status -->
                    <Label Text="Status:"
                           FontAttributes="Bold"
                           FontSize="16"
                           TextColor="#333" />
                    <Label Text="{Binding SelectedTestRun.Status}"
                           FontSize="16"
                           TextColor="{Binding SelectedTestRun.Status, Converter={StaticResource StatusColorConverter}}" />

                    <!-- Datum -->
                    <Label Text="Datum:"
                           FontAttributes="Bold"
                           FontSize="16"
                           TextColor="#333" />
                    <Label Text="{Binding SelectedTestRun.Date, StringFormat='{}{0:dd-MM-yyyy HH:mm}'}"
                           FontSize="16"
                           TextColor="Black" />

                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentView>