<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:charts="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             x:Class="SeleniumDashboardApp.Views.Tabs.ChartsView"
             x:Name="Root"
             BackgroundColor="Transparent">

    <VerticalStackLayout Padding="0" Spacing="20">

        <!-- Toggle switch in witte frame -->
        <Frame BackgroundColor="White"
               CornerRadius="8"
               Padding="15"
               HasShadow="False"
               BorderColor="#E0E0E0">
            <HorizontalStackLayout>
                <Label Text="Toon alle testruns" 
                       TextColor="#333" 
                       VerticalOptions="Center"
                       FontSize="16" />
                <Switch IsToggled="{Binding ShowAggregateData, Mode=TwoWay}" 
                        Margin="10,0,0,0"
                        OnColor="#5D7285"
                        ThumbColor="White" />
            </HorizontalStackLayout>
        </Frame>

        <FlexLayout Wrap="Wrap" JustifyContent="Center" AlignItems="Start" AlignContent="Start">

            <!-- Chart 1 - SIMPEL -->
            <Frame x:Name="Chart1" 
                   BorderColor="#E0E0E0" 
                   BackgroundColor="White" 
                   Padding="15" 
                   Margin="10"
                   CornerRadius="8"
                   HasShadow="False"
                   WidthRequest="320"
                   HeightRequest="260">
                <VerticalStackLayout>
                    <Label Text="{Binding BarChart1Title}" 
                           TextColor="#333" 
                           FontSize="16" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Center" 
                           Margin="0,0,0,10" />
                    <charts:ChartView x:Name="Chart1View" 
                                      Chart="{Binding BarChart1}" 
                                      BackgroundColor="White"
                                      HeightRequest="180" />
                </VerticalStackLayout>
            </Frame>

            <!-- Chart 2 - SIMPEL -->
            <Frame x:Name="Chart2" 
                   BorderColor="#E0E0E0" 
                   BackgroundColor="White" 
                   Padding="15" 
                   Margin="10"
                   CornerRadius="8"
                   HasShadow="False"
                   WidthRequest="320"
                   HeightRequest="260">
                <VerticalStackLayout>
                    <Label Text="{Binding BarChart2Title}" 
                           TextColor="#333" 
                           FontSize="16" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Center"
                           Margin="0,0,0,10" />
                    <charts:ChartView x:Name="Chart2View" 
                                      Chart="{Binding BarChart2}" 
                                      BackgroundColor="White"
                                      HeightRequest="180" />
                </VerticalStackLayout>
            </Frame>

            <!-- Chart 3 - SIMPEL -->
            <Frame x:Name="Chart3" 
                   BorderColor="#E0E0E0" 
                   BackgroundColor="White" 
                   Padding="15" 
                   Margin="10"
                   CornerRadius="8"
                   HasShadow="False"
                   WidthRequest="320"
                   HeightRequest="260">
                <VerticalStackLayout>
                    <Label Text="{Binding BarChart3Title}" 
                           TextColor="#333" 
                           FontSize="16" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Center"
                           Margin="0,0,0,10" />
                    <charts:ChartView x:Name="Chart3View" 
                                      Chart="{Binding BarChart3}" 
                                      BackgroundColor="White"
                                      HeightRequest="180" />
                </VerticalStackLayout>
            </Frame>

        </FlexLayout>
    </VerticalStackLayout>
</ContentView>