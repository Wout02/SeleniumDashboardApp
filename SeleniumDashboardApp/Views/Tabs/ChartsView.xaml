<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:charts="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             x:Class="SeleniumDashboardApp.Views.Tabs.ChartsView">

    <VerticalStackLayout Padding="20">

        <!-- Toggle voor alle testruns of enkel geselecteerde -->
        <HorizontalStackLayout>
            <Label Text="Toon alle testruns" VerticalOptions="Center" />
            <Switch IsToggled="{Binding ShowAggregateData, Mode=TwoWay}" />
        </HorizontalStackLayout>

        <!-- Grafieken als flexibele layout -->
        <FlexLayout Wrap="Wrap" JustifyContent="SpaceBetween" AlignItems="Start">
            <Frame BorderColor="Black" Padding="0" Margin="0,0,10,10" WidthRequest="300" HeightRequest="200">
                <charts:ChartView Chart="{Binding BarChart1}" />
            </Frame>
            <Frame BorderColor="Black" Padding="0" Margin="0,0,10,10" WidthRequest="300" HeightRequest="200">
                <charts:ChartView Chart="{Binding BarChart2}" />
            </Frame>
            <Frame BorderColor="Black" Padding="0" Margin="0,0,10,10" WidthRequest="300" HeightRequest="200">
                <charts:ChartView Chart="{Binding BarChart3}" />
            </Frame>
        </FlexLayout>

    </VerticalStackLayout>
</ContentView>
