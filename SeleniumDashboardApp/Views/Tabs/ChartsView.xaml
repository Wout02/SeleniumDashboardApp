<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SeleniumDashboardApp.Views.Tabs.ChartsView">

	<VerticalStackLayout Padding="20" Spacing="12">
		<Label Text="Grafieken"
               FontSize="20"
               FontAttributes="Bold"
               TextColor="{StaticResource PrimaryText}" />

		<!-- Voorbeeld van gekoppelde info -->
		<Label Text="Status per datum:" TextColor="{StaticResource PrimaryText}" />

		<Label Text="{Binding SelectedTestRun.Date, StringFormat='Testdatum: {0:dd-MM-yyyy HH:mm}'}"
               TextColor="{StaticResource PrimaryText}" />

		<!-- Je kunt hier later echte grafiekcomponenten toevoegen -->
		<Label Text="Hier kunnen je grafieken komen (bijv. met Syncfusion of Microcharts)"
               FontAttributes="Italic"
               TextColor="Gray" />
	</VerticalStackLayout>
</ContentView>