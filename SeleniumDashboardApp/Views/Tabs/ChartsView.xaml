<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:charts="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
    x:Class="SeleniumDashboardApp.Views.Tabs.ChartsView">

    <VerticalStackLayout Padding="20" Spacing="16">
        <Label Text="Grafieken"
               FontSize="20"
               FontAttributes="Bold"
               TextColor="Black" />

        <HorizontalStackLayout>
            <Label Text="Toon totalen" VerticalOptions="Center" />
            <Switch IsToggled="{Binding ShowAggregateData}"
                    Toggled="OnToggleChartScope" />
        </HorizontalStackLayout>

        <charts:ChartView Chart="{Binding BarChart1}" HeightRequest="200" />
        <charts:ChartView Chart="{Binding BarChart2}" HeightRequest="200" />
        <charts:ChartView Chart="{Binding BarChart3}" HeightRequest="200" />
        <charts:ChartView Chart="{Binding BarChart4}" HeightRequest="200" />
    </VerticalStackLayout>
</ContentView>