<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:charts="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             x:Class="SeleniumDashboardApp.Views.Tabs.ChartsView"
             x:Name="Root">

    <VisualStateManager.VisualStateGroups>
        <VisualStateGroup x:Name="DeviceStates">
            <VisualState x:Name="Mobile">
                <VisualState.Setters>
                    <Setter TargetName="Chart1" Property="WidthRequest" Value="320" />
                    <Setter TargetName="Chart1" Property="HeightRequest" Value="260" />
                    <Setter TargetName="Chart1View" Property="HeightRequest" Value="180" />

                    <Setter TargetName="Chart2" Property="WidthRequest" Value="320" />
                    <Setter TargetName="Chart2" Property="HeightRequest" Value="260" />
                    <Setter TargetName="Chart2View" Property="HeightRequest" Value="180" />

                    <Setter TargetName="Chart3" Property="WidthRequest" Value="320" />
                    <Setter TargetName="Chart3" Property="HeightRequest" Value="260" />
                    <Setter TargetName="Chart3View" Property="HeightRequest" Value="180" />
                </VisualState.Setters>
            </VisualState>

            <VisualState x:Name="DesktopOrTablet">
                <VisualState.Setters>
                    <Setter TargetName="Chart1" Property="WidthRequest" Value="500" />
                    <Setter TargetName="Chart1" Property="HeightRequest" Value="350" />
                    <Setter TargetName="Chart1View" Property="HeightRequest" Value="250" />

                    <Setter TargetName="Chart2" Property="WidthRequest" Value="500" />
                    <Setter TargetName="Chart2" Property="HeightRequest" Value="350" />
                    <Setter TargetName="Chart2View" Property="HeightRequest" Value="250" />

                    <Setter TargetName="Chart3" Property="WidthRequest" Value="500" />
                    <Setter TargetName="Chart3" Property="HeightRequest" Value="350" />
                    <Setter TargetName="Chart3View" Property="HeightRequest" Value="250" />
                </VisualState.Setters>
            </VisualState>
        </VisualStateGroup>
    </VisualStateManager.VisualStateGroups>

    <VerticalStackLayout Padding="20" Spacing="20">

        <HorizontalStackLayout>
            <Label Text="Toon alle testruns" TextColor="{StaticResource PrimaryText}" VerticalOptions="Center" />
            <Switch IsToggled="{Binding ShowAggregateData, Mode=TwoWay}" />
        </HorizontalStackLayout>

        <FlexLayout Wrap="Wrap" JustifyContent="Center" AlignItems="Start" AlignContent="Start">

            <!-- Chart 1 -->
            <Frame x:Name="Chart1" BorderColor="Black" BackgroundColor="White" Padding="10" Margin="10">
                <VerticalStackLayout>
                    <Label Text="{Binding BarChart1Title}" TextColor="{StaticResource PrimaryText}" FontSize="14" FontAttributes="Bold" HorizontalOptions="Center" />
                    <charts:ChartView x:Name="Chart1View" Chart="{Binding BarChart1}" BackgroundColor="White" />
                </VerticalStackLayout>
            </Frame>

            <!-- Chart 2 -->
            <Frame x:Name="Chart2" BorderColor="Black" BackgroundColor="White" Padding="10" Margin="10">
                <VerticalStackLayout>
                    <Label Text="{Binding BarChart2Title}" TextColor="{StaticResource PrimaryText}" FontSize="14" FontAttributes="Bold" HorizontalOptions="Center" />
                    <charts:ChartView x:Name="Chart2View" Chart="{Binding BarChart2}" BackgroundColor="White" />
                </VerticalStackLayout>
            </Frame>

            <!-- Chart 3 -->
            <Frame x:Name="Chart3" BorderColor="Black" BackgroundColor="White" Padding="10" Margin="10">
                <VerticalStackLayout>
                    <Label Text="{Binding BarChart3Title}" TextColor="{StaticResource PrimaryText}" FontSize="14" FontAttributes="Bold" HorizontalOptions="Center" />
                    <charts:ChartView x:Name="Chart3View" Chart="{Binding BarChart3}" BackgroundColor="White" />
                </VerticalStackLayout>
            </Frame>

        </FlexLayout>
    </VerticalStackLayout>
</ContentView>