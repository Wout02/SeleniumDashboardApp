<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SeleniumDashboardApp.Views.TestRunDetailsPage"
    Title="Details">
    <ScrollView Padding="20">
        <VerticalStackLayout Spacing="10">
            <Label Text="{Binding SelectedTestRun.ProjectName}" FontAttributes="Bold" FontSize="20" />
            <Label Text="{Binding SelectedTestRun.Status}" TextColor="Gray" />
            <Label Text="{Binding SelectedTestRun.Date, StringFormat='{}{0:dd-MM-yyyy HH:mm}'}" />
            <Label Text="{Binding SelectedTestRun.Summary}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>